{
    "id": "pwa-test",
    "name": "Basic PWA Test",
    "short_name": "PWA Test",
    "description": "A basic PWA test implementation",
    "start_url": "/?standalone=true",
    "scope": "/",
    "display": "standalone",
    "display_override": ["window-controls-overlay", "fullscreen", "standalone"],
    "background_color": "#ffffff",
    "theme_color": "#4a90e2",
    "orientation": "portrait",
    "categories": ["utilities"],
    "prefer_related_applications": false,
    "handle_links": "preferred",
    "launch_handler": {
        "client_mode": ["focus-existing", "auto"]
    },
    "edge_side_panel": {
        "preferred_width": 400
    },
    "icons": [
        {
            "src": "/icon-192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/icon-512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any"
        }
    ],
    "screenshots": [
        {
            "src": "/screenshot.png",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide"
        },
        {
            "src": "/screenshot-mobile.png",
            "sizes": "720x1280",
            "type": "image/png",
            "form_factor": "narrow"
        }
    ],
    "related_applications": [
        {
            "platform": "webapp",
            "url": "https://dazzling-tartufo-4d55f7.netlify.app/manifest.json"
        }
    ]
}
